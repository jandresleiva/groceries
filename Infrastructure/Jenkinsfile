node {
    stage('Checkout') {
        git branch: 'main', url: 'https://github.com/jandresleiva/groceries.git'
    }
    stage('Build') { 
        sh 'dotnet build'
    }
    stage('Test') {
        sh 'cd GroceriesTesting'
        sh 'dotnet test --no-build --verbosity normal --logger:"junit;LogFilePath=results.xml"'
        
        step([$class: 'XUnitBuilder', thresholds: [[$class: 'FailedThreshold', unstableThreshold: '1']], tools: [[$class: 'XUnitDotNetTestType', pattern: '*results.xml']]])   
    }
}