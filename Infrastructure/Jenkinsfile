node {
    stage('Checkout') {
        git branch: 'main', url: 'https://github.com/jandresleiva/groceries.git'
    }
    stage('Build') { 
        sh 'dotnet build'
    }
    stage('Test') {
        sh 'cd GroceriesTesting'
        sh 'dotnet test'
    }
    if (currentBuild.currentResult == 'SUCCESS') {
        stage('Deploy') {
            echo "SUCCEDED!!!"
        }
    }
}